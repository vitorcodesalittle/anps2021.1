# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /auth                       controllers.UserController.index()
GET     /testauth                   controllers.UserController.testAuth()
POST    /sign-up                    controllers.UserController.signUp()
POST    /login                      controllers.UserController.login()


GET     /products                   controllers.ProductController.getProducts()
POST    /products                   controllers.ProductController.createProduct()

GET     /cashflow                   controllers.TransactionController.mountCashFlow()
POST    /sales                      controllers.TransactionController.doSale()
GET    /transactions                controllers.TransactionController.getTransactions()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
